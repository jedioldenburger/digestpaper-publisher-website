{
  "extends": ["html-validate:recommended", "html-validate:document"],
  "rules": {
    "element-required-attributes": [
      "error",
      {
        "html": ["lang"],
        "meta[name=viewport]": ["content"]
      }
    ],
    "meta-viewport": "error",
    "no-inline-style": "error",
    "heading-level": "error"
  }
}
